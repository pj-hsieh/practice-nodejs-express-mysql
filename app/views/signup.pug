doctype html
html
    h2 Signup
    form(action="", method="post")
        div
            label(for="name") Name
            input(name="name", type="text", maxlength=32, required=true, value=name)
        div
            label(for="email") Email
            input(name="email", type="text", maxlength=200, required=true, value=email)
        div
            label(for="password") Password
            input(name="password", type="password", maxlength=20, required=true)
        div
            label(for="passwordConfirm") Confirm password
            input(name="passwordConfirm", type="password", maxlength=20, required=true)
        div
            input(type="submit", value="Sign up")

    ul(style="padding-top:10px")
        each msg in errors ? errors : []
            li=msg